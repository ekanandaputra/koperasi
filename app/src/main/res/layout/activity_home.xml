<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bgtwo"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="10dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/tvHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Selamat Datang"
                android:textAlignment="center"
                android:textColor="@color/warnaHitam"
                android:textSize="24dp" />

            <LinearLayout
                android:id="@+id/chat"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="28dp"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/bg_box"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <TextView
                    android:layout_marginBottom="20dp"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/warnaHitam"
                    android:text="Koperasi Simpan Pinjam Griya Permata Alam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:src="@drawable/avachating"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <TextView
                    android:textSize="15dp"
                    android:textColor="@color/warnaHitam"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Room Chat"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                

                <LinearLayout
                    android:id="@+id/peminjaman"
                    android:gravity="center"
                    android:layout_marginVertical="15dp"
                    android:layout_marginHorizontal="5dp"
                    android:padding="10dp"
                    android:background="@drawable/bg_box"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/iconstrip"
                        android:layout_width="70dp"
                        android:layout_height="70dp"/>

                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/warnaHitam"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pinjaman"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tabungan"
                    android:layout_marginVertical="15dp"
                    android:layout_marginHorizontal="5dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:background="@drawable/bg_box"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/iconstrip"
                        android:layout_width="70dp"
                        android:layout_height="70dp"/>

                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/warnaHitam"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tabungan"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/angsuran"
                    android:gravity="center"
                    android:layout_marginVertical="15dp"
                    android:layout_marginHorizontal="5dp"
                    android:padding="10dp"
                    android:background="@drawable/bg_box"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/iconstrip"
                        android:layout_width="70dp"
                        android:layout_height="70dp"/>

                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/warnaHitam"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Angsuran"/>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >



                <LinearLayout
                    android:id="@+id/profile"
                    android:gravity="center"
                    android:layout_marginVertical="15dp"
                    android:layout_marginHorizontal="5dp"
                    android:padding="10dp"
                    android:background="@drawable/bg_box"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/iconimg"
                        android:layout_width="70dp"
                        android:layout_height="70dp"/>

                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/warnaHitam"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Profile"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/notifikasi"
                    android:layout_marginVertical="15dp"
                    android:layout_marginHorizontal="5dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:background="@drawable/bg_box"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/iconbell"
                        android:layout_width="70dp"
                        android:layout_height="70dp"/>

                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/warnaHitam"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Notifikasi"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/logout"
                    android:gravity="center"
                    android:layout_marginVertical="15dp"
                    android:layout_marginHorizontal="5dp"
                    android:padding="10dp"
                    android:background="@drawable/bg_box"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/iconlog"
                        android:layout_width="70dp"
                        android:layout_height="70dp"/>

                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/warnaHitam"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Logout"/>

                </LinearLayout>



            </LinearLayout>
            
            

        </LinearLayout>
    </ScrollView>
</RelativeLayout>