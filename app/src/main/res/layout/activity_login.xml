<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgyo"
    android:gravity="bottom"
    tools:context=".LoginActivity">

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_marginBottom="200dp"
        app:contentPadding="20dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/warnaPutih"
        android:layout_width="350dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/iconpot"
                />

            <EditText
                android:layout_marginVertical="10dp"
                android:id="@+id/edUser"
                android:background="@drawable/bg_edlogin"
                android:paddingHorizontal="15dp"
                android:drawablePadding="16dp"
                android:drawableLeft="@drawable/ic_user"
                android:maxLines="1"
                android:ellipsize="end"
                android:hint="Username"
                android:layout_width="match_parent"
                android:layout_height="35dp" />

            <EditText
                android:layout_marginVertical="10dp"
                android:id="@+id/edPass"
                android:paddingHorizontal="15dp"
                android:background="@drawable/bg_edlogin"
                android:drawablePadding="16dp"
                android:drawableLeft="@drawable/ic_password"
                android:maxLines="1"
                android:ellipsize="end"
                android:hint="Password"
                android:password="true"
                android:layout_width="match_parent"
                android:layout_height="35dp" />

            <Button
                android:layout_marginVertical="10dp"
                android:textColor="@color/warnaPutih"
                android:textSize="17dp"
                android:layout_gravity="end"
                android:layout_width="130dp"
                android:background="@color/tombol"
                android:layout_height="35dp"
                android:id="@+id/btLogin"
                android:text="Login"
                android:textAllCaps="false"/>

            <TextView
                android:id="@+id/tvSimulasi"
                android:textColor="@color/warnaHitam"
                android:textAlignment="textEnd"
                android:text="Simulasi Cicilan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:layout_gravity="bottom"
        android:background="@color/warnaPutih"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tvRegister"
            android:textColor="@color/warnaHitam"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="16dp"
            android:text="Don't Have An Accout ? Register Here !"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>




</LinearLayout>