<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bguni"
    android:gravity="bottom"
    tools:context=".Menu.TabunganActivity">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="15dp"
            app:cardMaxElevation="5dp"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="@color/warnaHitam"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:text="Tabungan Anggota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvSaldoAnggota"
                    android:layout_marginTop="10dp"
                    android:textSize="30dp"
                    android:textAlignment="center"
                    android:text="Rp. 2.000.000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="15dp"
            app:cardMaxElevation="5dp"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="@color/warnaHitam"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:text="Simpanan Wajib"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvSimpananWajib"
                    android:layout_marginTop="10dp"
                    android:textSize="30dp"
                    android:textAlignment="center"
                    android:text="Rp. 2.000.000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:textColor="@color/warnaPutih"
            android:textSize="17dp"
            android:layout_width="200dp"
            android:background="@color/tombol"
            android:layout_height="35dp"
            android:id="@+id/btRiwayat"
            android:text="Riwayat Tabungan"
            android:textAllCaps="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="bottom"
        android:background="@color/warnaPutih"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tvTambahSaldo"
            android:textColor="@color/warnaHitam"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="16dp"
            android:text="Tambah Saldo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>





</LinearLayout>