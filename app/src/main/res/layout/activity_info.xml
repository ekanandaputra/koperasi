<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_layout"
    android:orientation="vertical"
    tools:context=".Menu.InfoActivity">

    <androidx.cardview.widget.CardView
        app:cardMaxElevation="20dp"
        app:cardCornerRadius="40dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/warnaHitam"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textAlignment="center"
                android:text="Informasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="20dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/warnaHitam"
                android:text="Total Peminjaman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvTotalPeminjaman"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="20dp"
                android:textSize="18dp"
                android:textColor="@color/warnaHitam"
                android:text="Total Peminjaman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="20dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/warnaHitam"
                android:text="Total Tabungan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvTotalTabungan"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="20dp"
                android:textSize="18dp"
                android:textColor="@color/warnaHitam"
                android:text="SHU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="20dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/warnaHitam"
                android:text="Simpanan Wajib"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvSimpananWajib"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="20dp"
                android:textSize="18dp"
                android:textColor="@color/warnaHitam"
                android:text="KAS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>